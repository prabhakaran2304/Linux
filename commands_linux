fc port --> systool -c fc_host -v | grep port_name ;  systool -c fc_host -v | grep port_state
fc card --> lspci -nn | grep -i hba 
fc port name id ---> lspci -nn | grep "Fibre Channel"
 grep -v "zZzZ" -H /sys/class/fc_host/host*/*_name
