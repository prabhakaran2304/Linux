######################## Process ################################################
zombie --> ps -ef | grep defunct | grep -v grep | cut -b8-20 | xargs kill -9
overall apache usage-->  ps -ylC httpd | awk '{x += $8;y += 1} END {print "Apache Memory Usage (MB): "x/1024; print "Average Proccess Size (MB): "x/((y-1)*1024)}'
ps -eo pid,ppid,cmd,%mem,%cpu --sort=-%mem | head -n 17
ps -eo size,pid,user,command --sort -size | awk '{ hr=$1/1024 ; printf("%13.2f Mb ",hr) } { for ( x=4 ; x<=NF ; x++ ) { printf("%s ",$x) } print "" }'
process cpu high --> ps -Ao user,uid,comm,pid,pcpu,tty,pmem --sort=-pcpu | head -n 9
ps -Ao user,uid,comm,pid,pcpu,tty --sort=-pcpu | head -n 6
ps -eo pid,ppid,cmd,%mem,%cpu --sort=-%mem | head
